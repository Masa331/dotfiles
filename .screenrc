shell -${SHELL}

bindkey "^[[1;3D" prev # xterm: alt + left arrow
bindkey "^[[1;3C" next # xterm: alt + right arrow
bindkey "^[[d" prev
bindkey "^[[c" next

screen -t git
select 0
stuff "echo 'AHOJ'; gitsh^M"
screen -t bash
screen -t vim
screen -t test-single
screen -t test-all
screen -t server
screen -t psql
select 6
stuff "echo 'AHOJ'; psql^M"
caption always "%H%=%-Lw%{R.}%n%f*%{-} %t%+Lw%=%c:%s"
hardstatus alwayslastline "%n %t%? - %h"
